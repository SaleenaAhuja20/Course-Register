@model IEnumerable<SCDLAB.Models.Entities.Student>

@{
    ViewData["Title"] = "Students";
}

<h3 class="mb-3">Student List</h3>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Enrollment</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Id</td>
                <td>@s.FullName</td>
                <td>@s.Email</td>
                <td>
                    <a asp-action="Details" asp-route-id="@s.Id"
                       class="btn btn-sm btn-info">
                        Details
                    </a>

                    <a asp-controller="Enrollment"
                       asp-action="Enroll"
                       asp-route-studentId="@s.Id"
                       class="btn btn-sm btn-primary">
                        Enroll
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">
    Add New Student
</a>
